<%= render 'shared/page_header', header: t('.category') %>

<div class='content px-2'>
  <div class='text-right btn-group-sm'>
    <%= link_to t('.edit'), edit_admin_category_path, class: 'btn btn-default' %>
    <%= link_to t('.delete'), admin_category_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>

  <div class='container-fluid'>
    <table class='table'>
      <tbody>
        <tr>
          <th><%= t('.id') %></th>
          <td><%= @category.id %></td>
        </tr>
        <tr>
          <th><%= t('.name') %></th>
          <td><%= @category.name %></td>
        </tr>
        <tr>
          <th><%= t('.description') %></th>
          <td><%= @category.description %></td>
        </tr>
      </tbody>
    </table>

    <div class='card card-outline card-info'>
      <div class='card-header'>
        <h3 class='card-title'>Courses</h3>
      </div>
      <div class='card-body'>
        <%= render 'admin/courses/table', courses: @category.courses %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/page_footer' %>