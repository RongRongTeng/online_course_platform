<%= render 'shared/page_header', header: t('.course') %>

<div class='content px-2'>
  <div class='text-right btn-group-sm'>
    <%= link_to t('.edit'), edit_admin_course_path, class: 'btn btn-default' %>
    <%= link_to t('.delete'), admin_course_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>

  <div class='container-fluid'>
    <table class='table'>
      <tbody>
        <tr>
          <th><%= t('.id') %></th>
          <td><%= @course.id %></td>
        </tr>
        <tr>
          <th><%= t('.for_sale?') %></th>
          <td><%= true_false_label @course.for_sale? %></td>
        </tr>          
        <tr>
          <th><%= t('.title') %></th>
          <td><%= @course.title %></td>
        </tr>
        <tr>
          <th><%= t('.description') %></th>
          <td><%= @course.description %></td>
        </tr>
        <tr>
          <th><%= t('.url') %></th>
          <td><%= @course.url %></td>
        </tr>
        <tr>
          <th><%= t('.currency') %></th>
          <td><%= @course.currency %></td>
        </tr>
        <tr>
          <th><%= t('.price') %></th>
          <td><%= @course.price %></td>
        </tr>
        <tr>
          <th><%= t('.starts_at') %></th>
          <td><%= @course.starts_at %></td>
        </tr>
        <tr>
          <th><%= t('.ends_at') %></th>
          <td><%= @course.ends_at %></td>
        </tr>
        <tr>
          <th><%= t('.expiry_period') %></th>
          <td><%= day_inspect @course.expiry_period %></td>
        </tr>
        <tr>
          <th><%= t('.categories') %></th>
          <td>
            <% @course.categories.each do |category| %>
              <span class='badge bg-primary'><%= category.name %></span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= render 'shared/page_footer' %>